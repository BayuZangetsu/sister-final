<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="BOOKING TIKET"
    android:gravity="center"
    android:textSize="45dp"
    android:textColor="#000"
    android:background="@color/colorPrimary"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nonik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint="Nomor Induk Kependudukan / NIK"
                android:padding="10dp" />
            <EditText
                android:padding="10dp"
                android:id="@+id/namalengkap"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Lengkap"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Jenis Kelamin"
                android:textColor="#000"/>
            <Spinner
                android:padding="10dp"
                android:id="@+id/spinnersex"
                android:entries="@array/jeniskelamin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Spinner>

            <EditText
                android:id="@+id/alamatlengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint="Alamat Lengkap"
                android:inputType="textMultiLine"
                android:padding="10dp" />
            <Button
                android:id="@+id/btnNext"
                android:onClick="daftarbio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Langkah Selanjutnya"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>